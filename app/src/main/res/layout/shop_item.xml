<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="0dp"
            android:layout_height="109dp"
            android:layout_weight="3"
            android:src="@drawable/mihaohao"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/verify"/>
                <TextView
                    android:id="@+id/txtItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mì tôm chua cay Hảo Hảo"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330000"
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_regular"
                    android:drawableStart="@drawable/dong"
                    android:textColor="#ACACAC"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/newPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330000"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:drawableStart="@drawable/dong_large"
                    android:textColor="#416DD4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:paddingLeft="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: "
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#8F8F8F"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/expDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/08/2023"
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#8F8F8F"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/txtStoreItem"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="CircleK"
                    android:padding="@dimen/cardview_default_radius"
                    android:background="@drawable/store_bg"
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#8F8F8F"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="4dp"/>

        </LinearLayout>




    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>


