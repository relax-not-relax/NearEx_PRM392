<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageItem"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:src="@drawable/mihaohao"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/verify"/>
                <TextView
                    android:id="@+id/txtItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mì tôm chua cay Hảo Hảo"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:paddingLeft="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: "
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#8F8F8F"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/expDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/08/2023"
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="#8F8F8F"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330000"
                    android:textSize="11dp"
                    android:fontFamily="@font/inter_regular"
                    android:drawableStart="@drawable/dong"
                    android:textColor="#ACACAC"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/newPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330000"
                    android:textSize="15dp"
                    android:fontFamily="@font/inter_semibold"
                    android:drawableStart="@drawable/dong_large"
                    android:textColor="#416DD4"/>

            </LinearLayout>





        </LinearLayout>




    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="10"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Cửa hàng"
            android:textSize="11dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#8F8F8F"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/txtStoreItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="CircleK"
            android:padding="3dp"
            android:textSize="11dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#8F8F8F"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="134 Lê Văn Việt"
            android:textSize="15dp"
            android:fontFamily="@font/inter_semibold"
            android:drawableStart="@drawable/location_point"
            android:textColor="#585858"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            />


    </LinearLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="10"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="1 sản phẩm"
            android:textSize="11dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#8F8F8F"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Thành tiền:"
            android:textSize="13dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="0dp"

            />
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="330000"
            android:textSize="15dp"
            android:fontFamily="@font/inter_semibold"
            android:drawableStart="@drawable/dong_large"
            android:textColor="#416DD4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />


    </LinearLayout>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="10"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Mua lại"
            android:textSize="13dp"
            android:background="#537FE7"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_semibold"
            />


    </LinearLayout>

</LinearLayout>